{
  "name": "short-zh-number",
  "version": "1.0.10",
  "main": "dist/index.js",
  "repository": "git@github.com:FinalDes/short-zh-number.git",
  "author": "Alex Alonso <alex4551@gmail.com>",
  "license": "MIT",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "del-cli dist && tsc -p tsconfig.json",
    "lint": "tslint -c tslint.json -p tsconfig.json 'src/index.ts'",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coveralls": "yarn test:coverage && cat ./coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "coveralls": "^3.0.2",
    "del-cli": "^1.1.0",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.2"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
